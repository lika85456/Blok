<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.lika85456.blokusdeskgame.Activity.SingleplayerActivity">


    <com.example.lika85456.blokusdeskgame.Views.GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <com.example.lika85456.blokusdeskgame.Views.DrawingGridView
            android:id="@+id/insider_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.lika85456.blokusdeskgame.Views.GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent">

        </RelativeLayout>

        <TextView
            android:id="@+id/consoleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/coiny"
            android:gravity="center_vertical"
            android:text="Your turn"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </ScrollView>

</LinearLayout>
